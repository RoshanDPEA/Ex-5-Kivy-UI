<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'vertical'
        color: 1,0,0,1

    Label:
        text: str(slider.value)
        font_size: 40
        color: 0,0,1,1
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.75

    Button:
        size_hint: None, None
        text: 'default backround'
        size_hint: None, None
        x: root.width * 0.25
        y: root.height * 0.25
        color: 1, 0, 0, 1
        size: 200, 150
        on_press: root.backroundChangeMain()
        size: 200, 150
        background_normal: ''


    Label:
        id: mtr
        text: 'motor'
        font_size: 40
        color: 0,0,1,1
        size: 100, 100
        center_x: root.width * 0.0
        center_y: root.height * 0.75

    DPEAButton:
        id: btn
        text: 'on'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.75
        color: 0, 1, 0, 1
        on_press: root.toggleText()

    DPEAButton:
        id: cnt
        i: 0
        text: '0'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.75
        color: 0, 1, 0, 1
        on_press: root.counter()

    DPEAButton:
        id: mtr
        text: 'motor switch'
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: root.toggleMotor()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed()

    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

<Screen2>:
    name: 'button'
    Button:
        size_hint: None, None
        text: 'backround change'
        x: root.width * 0.25
        y: root.height * 0.25
        color: 1, 0, 0, 1
        on_press: root.imageToggle()
        size: 200, 150
        background_normal: 'Trollface_non-free.png'